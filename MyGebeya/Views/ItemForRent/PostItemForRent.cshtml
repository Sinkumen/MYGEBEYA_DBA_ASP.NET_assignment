@model MyGebeya.ViewModels.PostItemForRentViewModel

@{
    ViewBag.Title = "PostItemForRent";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Post Item For Rent</h2>

@using (Html.BeginForm("PostItemForRent", "ItemForRent", FormMethod.Post, new { enctype = "multipart/form-data", @style = "width: 100 %; " }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Item.item_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item.item_name, new { htmlAttributes = new { @required = true, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item.item_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item.item_description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item.item_description, new { htmlAttributes = new { @required = true, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item.item_description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item.payment_type_id, "item_type_id", htmlAttributes: new { @style = "font-size:20px;", @class = "control-label " })

            @Html.DropDownListFor(model => model.Item.payment_type_id, new SelectList(Model.Item.payment_Types, "payment_type_id", "payment_type1"), "Select Item Type", new { @required = true, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Item.payment_type_id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item.item_type_id, "item_type_id", htmlAttributes: new { @style = "font-size:20px;", @class = "control-label " })

            @Html.DropDownListFor(model => model.Item.item_type_id, new SelectList(Model.Item.item_Types, "item_type_id", "item_type_name"), "Select Item Type", new { @required = true, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Item.item_type_id, "", new { @class = "text-danger" })
        </div>

      
       

        <div style="margin-top: 50px" class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Item.price, htmlAttributes: new { @style = "font-size:20px;", @class = "control-label " })
                @Html.EditorFor(model => model.Item.price, new { htmlAttributes = new { @required = true, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item.price, "", new { @class = "text-danger" })

            </div>

            <div style="margin-left:50px" class="form-group">
                <label  style="font-size:20px;" class="control-label "  for="ImageFile">Image</label>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Item.ImageFile, new { accept = ".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*", type = "file",required =true, name = "Files" })<br /><br />
              
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

